git-stat-folder() { [ -d "$1" ] && printf " %-9s @ %s\n" "$1" "$(git-head-stat $1)"; }
function _hasCmd() { type "$1" &>/dev/null; }

# Console prints may be skipped
if [ "$1" != "silent" ]; then

	echo
	_hasCmd figlet && (
		figlet '  ' $SHORTHOSTNAME 2>/dev/null
		echo
	)

	_hasCmd dotfiles && (
		echo "dotfiles @ $(dotfiles log --oneline | head -n 1)"
		echo -e "\033[31m$(dotfiles status --porcelain)\e[0m"
		echo
	)

	_hasCmd gita && (
		gita ll
		echo
	)

	_hasCmd docker && (
		docker ps --format "table {{.Image}}\t{{.Status}}\t{{.Ports}}"
		echo
	)

fi
