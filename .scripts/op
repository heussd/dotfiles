#!/bin/bash

[ -e "$1" ] && cd "$1"
if [ "$PWD" = "$HOME" ]; then
	cd ~/projects
fi
sel=$(ls -t | fzf)

echo $sel
if [[ "$sel" = *"-made" ]]; then
	op "$sel"
fi

cd $sel
pwd

kitty @ launch --type=tab --tab-title "$sel" --cwd "$(pwd)"


[ -d .git ] && stree .

[ -f docker-compose.yml ] && code "$(pwd)"

[ -f Dockerfile ] && code "$(pwd)"

[ -f package.json ] && open -na "WebStorm.app" --args "$(pwd)"

[ -f "*.html" ] && code "$(pwd)"

[ -f "build.gradle*" ] && open -na "IntelliJ IDEA.app" --args "$(pwd)"

[ -f "requirements.txt" ] && open -na "PyCharm.app" --args "$(pwd)"


